(defun ls-is-const (?subject) 
    (if (equal ?subject local)
    
        (ls-is-const (value-of (:: (value-of local::parent) parent)))
        
        (loop for ?mbr in (ls ?subject) do 
            (if (is-const  $(value-of (value-of ?mbr)))
                (print (str-format "obj=%-20s, type=%s\n" 
                            (name-of $(value-of ?mbr)) 
                             (to-string (type-of $(value-of (value-of ?mbr))))))
            )
        )
    )
)
;;;

(ls-is-const root)
;;;

(ls-is-const system)
;;;

(ls-is-const main)
