(reduct (+ 0 ?x))
;=>?x

(reduct (+ ?x ?y 0))
;=>(+ ?x ?y)

(reduct (- ?x ?y 0))
;=>(- ?x ?y)

(reduct (* ?x ?y 0))
;=>0

(reduct (and ?x ?y false))
;=>false

(reduct (or ?x ?y true))
;=>true

(reduct (power ?x 0))
;=>1

(reduct (power 0 ?x))
;=>0

(reduct (power 1 ?x))
;=>1