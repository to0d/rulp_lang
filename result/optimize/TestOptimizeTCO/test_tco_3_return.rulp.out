;; fact(n) = n + fact(n-1)
(defun fact (?v)
    (do 
        (if (<= ?v 0)(return 0))
        (return (+ ?v (fact (- ?v 1))))     ; <== cps in return expression
    )
)[opt-tco]
;=>fact

(list-function-in-return fact)
;=>'("fact")

